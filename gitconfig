[user]
	name = Sergey Fedorov
	email = sergey.a.fedorov@gmail.com
[core]
	editor = vim
[color]
	ui = true
	branch = auto
	status = auto
	diff = auto
[merge]
	tool = meld
	defaulttoupstream = true
	conflictstyle = diff3 
	log = true
[push]
	default = upstream
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status -sb
	ff = merge --ff-only
	unstage = reset HEAD --
	last = log -1 HEAD --stat
	ll = log --oneline --decorate
	lh = log --oneline --decorate master..HEAD
	la = log --format='%C(auto) %h - %ar %an: %s%d' --decorate
	lg = log --oneline --decorate --graph
	graph = log --graph --oneline --decorate
	diffi = diff --ignore-space-change
	diffc = diff --cached
	check = diff --check
	vimdiff = difftool -y -t vimdiff
	meldiff = difftool -y -t meld
	commit-append = commit --amend --no-edit
	commit-amend = commit --amend
	out = cherry --abbrev --verbose
	p = pull --ff-only --verbose
[credential]
	helper = cache --timeout=3600
[pager]
	status = on
[branch]
	autosetuprebase = always
[log]
	decorate = true
